@{
    ViewData["Title"] = "InfoAlbum";
}
<link rel="stylesheet" href="/css/style.css">
<div>
    <h1>@ViewBag.album.nombre</h1>
    <h3>De: @ViewBag.album.artista</h3>
    <img scr= "/imagenes/@ViewBag.album.foto" alt="Portada del album"/>
    <h3>Productor: @ViewBag.album.productor</h3>
    <h3>Genero: @ViewBag.album.genero</h3>
    <h3>Lista de canciones:</h3>
    @{foreach(Cancion cancion in ViewBag.listaTemas){
        <h3> @cancion.nombre </h3>
        <h4> @cancion.duracion </h4>
    }}
    <h3>ID: @ViewBag.album.id</h3>
    <a href='@Url.Action("Index")'> Volver al menu</a>
</div>
